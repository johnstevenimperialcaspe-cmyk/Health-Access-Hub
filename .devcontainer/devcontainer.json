{
  "name": "Health Access Hub Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postStartCommand": "bash /workspaces/Health-Access-Hub/.devcontainer/startup.sh",
  "forwardPorts": [3000, 5000],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (Health Access Hub)",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5000": {
      "label": "Backend API",
      "onAutoForward": "silent",
      "visibility": "private"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
